{
	"pluginAlias": "TuyaPlatform",
	"pluginType": "platform",
	"singular": true,
	"headerDisplay": "",
	"footerDisplay": "",
	"schema": {
		"type": "object",
		"properties": {
			"options": {
				"title": "Project Info",
				"type": "object",
				"required": true,
				"properties": {
					"projectType": {
						"title": "Project Type (Development Method)",
						"type": "string",
						"default": "2",
						"oneOf": [{
							"title": "Custom",
							"enum": ["1"]
						}, {
							"title": "Smart Home",
							"enum": ["2"]
						}],
						"required": true
					},
					"endpoint": {
						"title": "Endpoint",
						"type": "string",
						"format": "url",
						"oneOf": [{
							"title": "China Data Center",
							"enum": ["https://openapi.tuyacn.com"]
						}, {
							"title": "Western America Data Center",
							"enum": ["https://openapi.tuyaus.com"]
						}, {
							"title": "Eastern America Data Center",
							"enum": ["https://openapi-ueaz.tuyaus.com"]
						}, {
							"title": "Central Europe Data Center",
							"enum": ["https://openapi.tuyaeu.com"]
						}, {
							"title": "Western Europe Data Center",
							"enum": ["https://openapi-weaz.tuyaeu.com"]
						}, {
							"title": "India Data Center",
							"enum": ["https://openapi.tuyain.com"]
						}],
						"required": true
					},
					"accessId": {
						"title": "Access ID",
						"type": "string",
						"required": true
					},
					"accessKey": {
						"title": "Access Secret",
						"type": "string",
						"required": true
					}
				}
			}
		}
  }
}
